<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/list_item_view_margin"
    card_view:cardCornerRadius="@dimen/list_item_view_cornder_radius"
    card_view:elevation="@dimen/list_item_view_default_elevation">

    <TextView
        android:id="@+id/listItemCountryNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/list_item_countries_name_margin"
        android:fontFamily="@font/ubuntu_medium"
        android:text="@string/list_item_countries_name_label"
        android:textColor="@color/secondaryTextColor"
        android:textSize="@dimen/list_item_countries_name_text_size" />
</android.support.v7.widget.CardView>